<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nome_animal_servicos_solicitados"
        android:text="Nome do Animal"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_nome_servico_servicos_solicitados"
        android:text="Nome do ServiÃ§o"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_nome_animal_servicos_solicitados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_status_servicos_solicitados"
        android:text="Status"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_nome_servico_servicos_solicitados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/tv_status_servicos_solicitados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_data_servicos_solicitados"
            android:text="Data:"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_hora_servicos_solicitados"
            android:text="Hora:"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>